<synth>

    <!--Default style that all regions will use-->
    <style value = "inventoryStyle">
        <!--Make all regions opaque-->
        <opaque doubleValue="TRUE" />
        <font name="serif" size = "14" />
    </style>

    <!--Textfield style-->
    <style value="textfield">
        <insets top="2" left="2" bottom="2" right="2" />
        <state>
            <font name="serif" size="14" />
            <color doubleValue="WHITE" dbAction="BACKGROUND"/>
            <color doubleValue="BLACK" dbAction="TEXT_FOREGROUND" />
        </state>
    </style>



    <bind style="inventoryStyle" dbAction="region" key=".*" />
    <bind style="textfield" dbAction="region" key="TextField" />


</synth>