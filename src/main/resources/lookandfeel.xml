<synth>

    <!--Default style that all regions will use-->
    <style id = "inventoryStyle">
        <!--Make all regions opaque-->
        <opaque value="TRUE" />
        <font name="serif" size = "14" />
    </style>

    <!--Textfield style-->
    <style id="textfield">
        <insets top="2" left="2" bottom="2" right="2" />
        <state>
            <font name="serif" size="14" />
            <color value="WHITE" type="BACKGROUND"/>
            <color value="BLACK" type="TEXT_FOREGROUND" />
        </state>
    </style>



    <bind style="inventoryStyle" type="region" key=".*" />
    <bind style="textfield" type="region" key="TextField" />


</synth>